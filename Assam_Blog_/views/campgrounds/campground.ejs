<% include ../partial/header%>

<div class="container" style="width:90%; margin:-10px auto;">
	<header class= "jumbotron" >
		<h1>Heart of Northeast - ASSAM!</h1>
		<p>For the people who loves adventure.</p>
		<p>
			<a class="btn btn-primary btn large" href="/campground/new">Add New Awesome Place</a>
		</p>
	</header>


	<div class="row text-center">
		<%campground.forEach(function(campgrounds){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src=" <%= campgrounds.image %>">
				</div>
				<div class="caption">
					<h4><%= campgrounds.name %></h4>
				</div>
				<p><a class="btn btn-primary" href="/campground/<%=campgrounds._id%>">More info</a></p>
			</div>
		<%})%>
	</div>

</div>
<% include ../partial/footer%>
